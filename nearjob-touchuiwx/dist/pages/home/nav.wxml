<!-- 顶部导航区域 -->
<view style="color:#878787;font-size:14px;height:40px;" class="ui-row ui-row-border-bottom">
  <!-- 城市 -->
  <view bindtap="toCitySelect" class="ui-col ui-col-align-center align-center valign-middle" style="">
    <view class="ui-col-content align-center valign-middle">
      <view>
        <text>{{currentCity}}</text>
        <span type="slide_down" size="10" color="#878787" style="padding-left:8px;color: #878787;font-size: 10px;" class="ui-icon icon-slide_down"></span>
      </view>
    </view>
  </view>

  <!-- 岗位 -->
  <view bindtap="jobPopup" class="ui-col ui-col-align-center align-center valign-middle" style="">
    <view class="ui-col-content align-center valign-middle">
      <view>{{currentJob}}
        <span type="slide_down" size="10" color="#878787" style="padding-left:8px;color: #878787;font-size: 10px;" class="ui-icon icon-slide_down"></span>
      </view>
      <ui-popup cropout show="{{showJob}}" height="300" position="top" width="50%" top="{{ poptpTop }}" mask-style="{{ {backgroundColor:'rgba(0,0,0,0.5)',top:poptpTop+'px'} }}" _pid="{{_pid}}">
        <ui-cascader show-title="{{false}}" bindselected="jobSelected" data="{{jobList}}" _pid="{{_pid}}"></ui-cascader>
      </ui-popup>
    </view>
  </view>

  <!-- 距离 -->
  <view bindtap="distancePopup" class="ui-col ui-col-align-center align-center valign-middle" style="">
    <view class="ui-col-content align-center valign-middle">
      <view>{{currentDistance==0 ? '距离': currentDistance + 'km'}}
        <span type="slide_down" size="10" color="#878787" style="padding-left:8px;color: #878787;font-size: 10px;" class="ui-icon icon-slide_down"></span>
      </view>
      <ui-popup show="{{showDistance}}" _pid="{{_pid}}">
        <view style="margin:25px 10px 50px;">
          <ui-slider scale-margin="25" width="{{width-20}}" value="{{currentDistance}}" min="0" max="10" key-scale-line="1" active-color="#A9DC21" slider-weight="4" bindchange="distanceSelected" _pid="{{_pid}}">
          </ui-slider>
        </view>
        <view style="margin-top:10px;padding:0 10px;background-color:#fafafa;border-top:1px solid #eee;">
          <button class="button1" style="background-color:#A9DC21;margin:15px;color:#fff" data-finish="true" bindtap="distancePopup">完成</button>
        </view>
      </ui-popup>
    </view>
  </view>

  <!-- 筛选 -->
  <view bindtap="sortPopup" class="ui-col ui-col-align-center align-center valign-middle" style="">
    <view class="ui-col-content align-center valign-middle">
      <view>
        <text>筛选</text>
        <span type="slide_down" size="10" color="#878787" style="padding-left:8px;color: #878787;font-size: 10px;" class="ui-icon icon-slide_down"></span>
      </view>
      <ui-popup cropout show="{{ showSort }}" height="300" position="right" top="40" mask-style="{{ { top: '40px' } }}" _pid="{{_pid}}">
        <view>
          <ui-check-list max="1" label-position="left" options="{{ sortKeyList }}" value="{{ sortValueList }}" type="plain" bindchange="changeSort" _pid="{{_pid}}"></ui-check-list>
        </view>
      </ui-popup>
    </view>
  </view>
</view>