<view>

  <!-- 顶部导航区域 -->
  <view style="color:#666;height:40px;" class="ui-row ui-row-border-bottom">
    <!-- 城市 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view bindtap="toCitySelect">
          <text>{{currentCity}}</text>
          <span type="slide_down" size="8" color="#878787" style="padding-left:4px;color: #878787;font-size: 8px;" class="ui-icon icon-slide_down"></span>
        </view>
      </view>
    </view>

    <!-- 岗位 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view bindtap="jobPopup">{{currentJob}}</view>
        <ui-popup show="{{showJob}}" position="top" width="66.6%" top="{{ poptpTop }}" background="#000" mask-style="{{ {backgroundColor:'rgba(255,255,255,0.6)',top:poptpTop+'px'} }}" _pid="{{_pid}}">
          <ui-cascader show-title="{{false}}" bindselected="jobSelected" data="{{jobList}}" _pid="{{_pid}}"></ui-cascader>
        </ui-popup>
      </view>
    </view>

    <!-- 距离 -->
    <view class="ui-col ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view bindtap="distancePopup">{{currentDistance}}km</view>
        <ui-popup show="{{showDistance}}" _pid="{{_pid}}">
          <view style="margin:25px 10px;">
            <ui-slider scale-margin="15" width="{{width-20}}" value="{{defaultDistance}}" min="0" max="10" key-scale-line="1" active-color="#A9DC21" slider-weight="4" thumb-style="{{styleOfDistance}}" bindchange="distanceSelected" _pid="{{_pid}}">
            </ui-slider>
          </view>
          <view style="margin-top:20px;padding:10px;padding-bottom:20px;background-color:#fafafa;border-top:1px solid #eee;">
            <button class="button1" style="background-color:#A9DC21;margin:15px;color:#fff" bindtap="distancePopup">完成</button>
          </view>
        </ui-popup>
      </view>
    </view>
  </view>

  <!-- 排序区域 -->
  <ui-tags data="{{sortList}}" bindchange="changeSort" fixed-width item-width="{{width/3-10}}" col-number="3" _pid="{{_pid}}"></ui-tags>

  <!-- 职位区域 -->
  <ui-swipe-out height="80" operate-width="80" data-index="{{index}}" can-swipe="{{item.canSwipe}}" value="{{item.switcher}}" wx:for="{{jobDataList}}" bindchange="switchSlideTab" _pid="{{_pid}}">
    <view slot="content" bindtap="toDeail">
      <view class="top_tip ui-row ui-row-border-bottom" style="height:80px;">
        <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 80px;">
          <view class="ui-col-content align-center valign-middle">
            <view class="left_icon" style="background-color:{{colorList[index%3]}}">
              <span type="{{ iconList[index%5] }}" color="#fff" size="20" class="ui-icon icon-{{ iconList[index%5] }}" style="color: #fff;font-size: 20px;"></span>
            </view>
          </view>
        </view>
        <view class="text ui-col ui-col-align-left align-left valign-middle" style="padding-left: 10px; padding-right: 10px;">
          <view class="ui-col-content align-left valign-middle">
            <view style="width:100%">
              <view class="ui-row" style="height:30px;">
                <view class="ui-col ui-col-align-left align-left valign-middle" style="">
                  <view class="ui-col-content align-left valign-middle">
                    <text>{{ item.jobName }} / {{item.jobSalary}}</text>
                  </view>
                </view>
                <view class="ui-col ui-col-align-right align-right valign-middle" style="padding-right: 10px;flex:0 0 80px;">
                  <view class="ui-col-content align-right valign-middle">
                    <text style="font-size:11px;color:#666">{{ item.postJobTime }}</text>
                  </view>
                </view>
              </view>
              <view>{{ item.jobEducation }} | 经验{{ item.jobExperience }} | {{ item.companyScale }}</view>
              <view class="ui-row" style="">
                <view class="ui-col ui-col-align-left align-left valign-middle" style="">
                  <view class="ui-col-content align-left valign-middle">
                    <view-text style="font-size:10px;color:#9C9FA4;">
                      {{ item.companyFullName }}
                      <span type="api-position" size="10" class="ui-icon icon-api-position" style="font-size: 10px;"> {{ item.distance }}公里</span>
                    </view-text>
                  </view>
                </view>
                <view class="ui-col ui-col-align-right align-right valign-middle" style="padding-right: 10px;flex:0 0 80px;">
                  <view class="ui-col-content align-right valign-middle">
                    <text style="font-size:10px;color:#9C9FA4">数据来源: {{ item.sourceFrom==1 ? '拉勾':'BOSS' }}</text>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view slot="operate">
      <view class="delNotInsJob" data-idx="{{index}}" bindtap="notInsJob">不感兴趣</view>
    </view>
  </ui-swipe-out>

</view>