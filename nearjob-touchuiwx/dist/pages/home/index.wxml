<view>
  <!-- 顶部导航区域 -->
  <view class="ui-row ui-row-border-bottom" style="height:40px;">

    <!-- 城市 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view class="sample_content" bindtap="toCitySelect">
          <text>{{currentCity}}</text>
          <span type="slide_down" size="8" color="#878787;" style="padding-left:4px;color: #878787;;font-size: 8px;" class="ui-icon icon-slide_down"></span>
        </view>
      </view>
    </view>

    <!-- 岗位 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view bindtap="jobPopup">{{currentJob}}</view>
        <ui-popup show="{{showJob}}" position="top" width="100%" height="200" top="{{ poptpTop }}" mask-style="{{ {backgroundColor:'rgba(255,255,255,0.6)',top:poptpTop+'px'} }}" _pid="{{_pid}}">
          <ui-cascader show-title="{{false}}" bindselected="jobSelected" data="{{jobList}}" _pid="{{_pid}}"></ui-cascader>
        </ui-popup>
      </view>
    </view>

    <!-- 距离 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view bindtap="distancePopup">{{currentDistance}}km</view>
        <ui-popup show="{{showDistance}}" _pid="{{_pid}}">
          <view style="margin:25px 10px;">
            <ui-slider scale-margin="15" width="{{width-20}}" value="{{defaultDistance}}" min="0" max="10" key-scale-line="1" active-color="#00c8b2" slider-weight="4" thumb-style="{{styleOfDistance}}" bindchange="distanceSelected" _pid="{{_pid}}">
            </ui-slider>
          </view>
          <view style="margin-top:20px;padding:10px;padding-bottom:20px;background-color:#fafafa;border-top:1px solid #eee;">
            <button class="button1" style="background-color:#00c8b2;margin:15px;" bindtap="distancePopup">完成</button>
          </view>
        </ui-popup>
      </view>
    </view>

    <!-- 排序 -->
    <view class="ui-col ui-col-border-right ui-col-align-center align-center valign-middle" style="">
      <view class="ui-col-content align-center valign-middle">
        <view>排序</view>
      </view>
    </view>
  </view>

  <!-- 职位区域 -->
  <ui-swipe-out height="80" operate-width="80" data-index="{{index}}" can-swipe="{{item.canSwipe}}" value="{{item.switcher}}" wx:for="{{jobDataList}}" bindchange="changeHandler1" bindtap="toDeail" _pid="{{_pid}}">
    <view slot="content">
      <view class="top_tip ui-row ui-row-border-bottom" style="height:80px;">
        <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 80px;">
          <view class="ui-col-content align-center valign-middle">
            <view class="left_icon" style="background-color:{{item.color}}">
              <span type="{{ item.icon }}" color="#fff" size="20" class="ui-icon icon-{{ item.icon }}" style="color: #fff;font-size: 20px;"></span>
            </view>
          </view>
        </view>
        <view class="text ui-col ui-col-align-left align-left valign-middle" style="padding-left: 10px; padding-right: 10px;">
          <view class="ui-col-content align-left valign-middle">
            <view style="width: 100%;">
              <view class="ui-row" style="height:30px;">
                <view class="ui-col ui-col-align-left align-left valign-middle" style="">
                  <view class="ui-col-content align-left valign-middle">
                    <text>{{ item.title }}</text>
                  </view>
                </view>
                <view class="ui-col ui-col-align-right align-right valign-middle" style="padding-right: 10px;flex:0 0 100px;">
                  <view class="ui-col-content align-right valign-middle">
                    <text>09-18</text>
                  </view>
                </view>
              </view>
              <view>{{ item.text }}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view slot="operate">
      <view class="delete" data-idx="{{index}}" bindtap="notInterestingJob">不感兴趣</view>
    </view>
  </ui-swipe-out>

</view>